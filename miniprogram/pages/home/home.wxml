<!-- 顶部轮播图 -->
<swiper indicator-dots="{{true}}" autoplay="{{true}}" interval="5000">
  <block wx:for="{{banners}}" wx:key="id">
    <swiper-item>
      <image src="{{item.imageUrl}}" mode="aspectFill" class="banner-img" />
    </swiper-item>
  </block>
</swiper>

<!-- 分类筛选 -->
<scroll-view scroll-x class="category-scroll">
  <view 
    wx:for="{{categories}}"
    wx:key="id"
    class="category-item {{activeCategory === item.id ? 'active' : ''}}"
    bindtap="handleCategoryTap"
    data-id="{{item.id}}"
  >
    {{item.name}}
  </view>
</scroll-view>

<!-- 推荐演出 -->
<view class="section-title">推荐演出</view>
<view class="event-list">
  <block wx:for="{{recommendEvents}}" wx:key="id">
    <event-card event="{{item}}" />
  </block>
</view>