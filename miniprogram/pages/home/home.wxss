/* 轮播图样式 */
.banner-img {
    width: 100%;
    height: 300rpx;
  }
  
  /* 分类筛选 */
  .category-scroll {
    white-space: nowrap;
    padding: 20rpx 0;
    background: #fff;
  }
  
  .category-item {
    display: inline-block;
    padding: 10rpx 30rpx;
    margin: 0 15rpx;
    border-radius: 30rpx;
    background: #f5f5f5;
    font-size: 28rpx;
  }
  
  .category-item.active {
    background: #ff6633;
    color: white;
  }
  
  /* 推荐区域 */
  .section-title {
    padding: 30rpx;
    font-size: 36rpx;
    font-weight: bold;
  }
  
  .event-list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30rpx;
    padding: 0 30rpx;
  }