.calendar-container {
    background-color: #fff;
    height: 100vh;
    padding: 20rpx;
    box-sizing: border-box;
  }
  
  .calendar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
  }
  
  .nav-btn {
    font-size: 40rpx;
    padding: 0 40rpx;
  }
  
  .week-header {
    display: flex;
    border-bottom: 1rpx solid #eee;
    padding-bottom: 20rpx;
  }
  
  .week-day {
    flex: 1;
    text-align: center;
    font-size: 28rpx;
    color: #666;
  }
  
  .calendar-grid {
    display: flex;
    flex-wrap: wrap;
  }
  
  .day-cell {
    width: calc(100% / 7);
    height: 120rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: 8rpx;
  }
  
  .day-number {
    font-size: 32rpx;
    margin-bottom: 10rpx;
  }
  
  .other-month .day-number {
    color: #ccc;
  }
  
  .today .day-number {
    color: #ff6633;
    font-weight: bold;
  }
  
  .has-show .day-number {
    color: #333;
    font-weight: bold;
  }
  
  .show-dot {
    width: 10rpx;
    height: 10rpx;
    background-color: #ff6633;
    border-radius: 50%;
  }
  
  /* 日期点击效果 */
  .day-cell:active {
    background-color: #f5f5f5;
  }