.calendar-container {
    background-color: #fff;
    min-height: 100vh;
    padding: 20rpx;
    box-sizing: border-box;
  }
  
  .calendar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
  }
  
  .nav-btn {
    font-size: 40rpx;
    padding: 0 40rpx;
  }
  
  .week-header {
    display: flex;
    border-bottom: 1rpx solid #eee;
    padding-bottom: 20rpx;
    margin-bottom: 20rpx;
  }
  
  .week-day {
    flex: 1;
    text-align: center;
    font-size: 28rpx;
    color: #666;
  }
  
  .loading {
    text-align: center;
    padding: 40rpx 0;
    color: #999;
    font-size: 28rpx;
  }
  
  .calendar-swiper {
    height: 600rpx;
  }
  
  .calendar-grid {
    display: flex;
    flex-wrap: wrap;
  }
  
  .day-cell {
    width: calc(100% / 7);
    height: 100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: 8rpx;
    margin-bottom: 10rpx;
  }
  
  .day-number {
    font-size: 32rpx;
    margin-bottom: 8rpx;
  }
  
  .other-month .day-number {
    color: #ccc;
  }
  
  .today .day-number {
    font-weight: bold;
  }
  
  .has-show .day-number {
    color: #333;
    font-weight: bold;
  }
  
  .selected .day-number {
    font-weight: bold;
  }
  
  .show-dot {
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .event-count {
    position: absolute;
    top: -15rpx;
    right: -15rpx;
    background-color: #ff4444;
    color: #fff;
    font-size: 18rpx;
    width: 24rpx;
    height: 24rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
  }
  
  /* 日期点击效果 */
  .day-cell:active {
    transform: scale(0.95);
  }
  
  /* 演出列表部分 */
  .events-section {
    margin-top: 40rpx;
    border-top: 1rpx solid #eee;
    padding-top: 30rpx;
  }
  
  .events-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .events-date {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
  }
  
  .view-all-btn {
    font-size: 28rpx;
    padding: 10rpx 20rpx;
    border: 1rpx solid;
    border-radius: 20rpx;
  }
  
  .events-list {
    height: 400rpx;
  }
  
  .event-item {
    display: flex;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #f5f5f5;
    align-items: center;
  }
  
  .event-poster {
    width: 120rpx;
    height: 80rpx;
    border-radius: 8rpx;
    margin-right: 20rpx;
    flex-shrink: 0;
  }
  
  .event-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .event-title {
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
  }
  
  .event-details {
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
  }
  
  .event-time {
    font-size: 24rpx;
    color: #666;
    margin-right: 20rpx;
  }
  
  .event-venue {
    font-size: 24rpx;
    color: #666;
  }
  
  .event-price {
    font-size: 28rpx;
    font-weight: bold;
  }
  
  .event-status {
    font-size: 24rpx;
    padding: 6rpx 16rpx;
    border-radius: 12rpx;
    text-align: center;
    min-width: 80rpx;
  }
  
  .event-status.onSale {
    background-color: #e8f5e8;
    color: #52c41a;
  }
  
  .event-status.upcoming {
    background-color: #fff7e6;
    color: #fa8c16;
  }
  
  .event-status.soldOut {
    background-color: #f6f6f6;
    color: #999;
  }
  
  .empty-state {
    text-align: center;
    padding: 60rpx 0;
    color: #999;
    font-size: 28rpx;
  }