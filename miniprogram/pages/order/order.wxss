.order-container {
    padding-bottom: 160rpx;
  }
  
  .event-info {
    display: flex;
    padding: 30rpx;
    background: white;
    margin-bottom: 20rpx;
  }
  
  .event-info .poster {
    width: 180rpx;
    height: 240rpx;
    border-radius: 8rpx;
    margin-right: 30rpx;
  }
  
  .event-info .info {
    flex: 1;
  }
  
  .event-info .title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 15rpx;
  }
  
  .event-info .session,
  .event-info .venue {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 10rpx;
  }
  
  .section {
    background: white;
    padding: 30rpx;
    margin-bottom: 20rpx;
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
  }
  
  .ticket-type {
    padding: 25rpx 0;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .ticket-type.active {
    background: #fff0e6;
  }
  
  .ticket-info {
    display: inline-block;
    vertical-align: middle;
    margin-left: 20rpx;
  }
  
  .ticket-info .name {
    font-size: 30rpx;
    margin-bottom: 5rpx;
  }
  
  .ticket-info .price {
    color: #ff6633;
    font-weight: bold;
  }
  
  .ticket-info .stock {
    font-size: 24rpx;
    color: #999;
  }
  
  .quantity-selector {
    display: flex;
    align-items: center;
  }
  
  .quantity-selector button {
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0;
    border: 1rpx solid #eee;
    background: white;
  }
  
  .quantity-selector .quantity-input {
    width: 100rpx;
    text-align: center;
    margin: 0 20rpx;
  }
  
  .price-section {
    position: fixed;
    bottom: 100rpx;
    left: 0;
    right: 0;
    background: white;
    padding: 25rpx 30rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
  }
  
  .price-section .total-price {
    color: #ff6633;
    font-size: 36rpx;
    font-weight: bold;
    margin-left: 15rpx;
  }
  
  .footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: white;
    padding: 20rpx 30rpx;
  }
  
  .submit-btn {
    background: #ff6633;
    color: white;
    border-radius: 50rpx;
    font-size: 32rpx;
  }