.user-container {
    background-color: #f5f5f5;
    min-height: 100vh;
    padding-bottom: 40rpx;
  }
  
  .user-header {
    background: linear-gradient(to right, #ff6633, #ff9966);
    padding: 60rpx 40rpx 100rpx;
    display: flex;
    align-items: center;
    position: relative;
    color: white;
  }
  
  .avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 4rpx solid rgba(255,255,255,0.5);
    margin-right: 30rpx;
  }
  
  .user-info {
    flex: 1;
  }
  
  .nickname {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  
  .phone {
    font-size: 26rpx;
    opacity: 0.9;
  }
  
  .login-btn {
    background: rgba(255,255,255,0.2);
    border: 2rpx solid white;
    color: white;
    font-size: 26rpx;
    padding: 8rpx 25rpx;
    border-radius: 30rpx;
    margin: 0;
  }
  
  .section {
    background: white;
    border-radius: 16rpx;
    margin: 20rpx 30rpx;
    padding: 0 30rpx;
  }
  
  .section-header {
    padding: 30rpx 0;
    font-size: 32rpx;
    font-weight: bold;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .view-all {
    font-size: 26rpx;
    color: #999;
  }
  
  .order-stats {
    display: flex;
    justify-content: space-between;
    padding: 30rpx 0;
  }
  
  .order-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    width: 25%;
  }
  
  .order-icon {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 15rpx;
  }
  
  .badge {
    position: absolute;
    top: -10rpx;
    right: 20rpx;
    background: #ff6633;
    color: white;
    font-size: 20rpx;
    min-width: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    text-align: center;
    border-radius: 18rpx;
    padding: 0 8rpx;
  }
  
  .function-list {
    padding: 10rpx 0;
  }
  
  .function-item {
    display: flex;
    align-items: center;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .function-item:last-child {
    border-bottom: none;
  }
  
  .function-icon {
    width: 45rpx;
    height: 45rpx;
    margin-right: 25rpx;
  }
  
  .function-item text {
    flex: 1;
    font-size: 30rpx;
  }
  
  .arrow {
    width: 30rpx;
    height: 30rpx;
  }