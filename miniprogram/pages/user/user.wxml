<view class="user-container">
  <!-- 用户信息 -->
  <view class="user-header">
    <image class="avatar" src="{{userInfo.avatar || '/assets/default-avatar.png'}}" />
    <view class="user-info">
      <view class="nickname">{{userInfo.nickname || '点击登录'}}</view>
      <view wx:if="{{userInfo.phone}}" class="phone">手机号: {{userInfo.phone}}</view>
    </view>
    <button wx:if="{{!userInfo.nickname}}" class="login-btn" bindtap="handleLogin">登录/注册</button>
  </view>

  <!-- 我的订单 -->
  <view class="section">
    <view class="section-header">
      <text>我的订单</text>
      <navigator url="/pages/order/list" class="view-all">查看全部</navigator>
    </view>
    <view class="order-stats">
      <navigator url="/pages/order/list?status=1" class="order-item">
        <image src="/assets/order-wait.png" class="order-icon" />
        <text>待支付</text>
        <view wx:if="{{orderStats.waitPay > 0}}" class="badge">{{orderStats.waitPay}}</view>
      </navigator>
      <navigator url="/pages/order/list?status=2" class="order-item">
        <image src="/assets/order-paid.png" class="order-icon" />
        <text>已支付</text>
      </navigator>
      <navigator url="/pages/order/list?status=3" class="order-item">
        <image src="/assets/order-used.png" class="order-icon" />
        <text>已完成</text>
      </navigator>
      <navigator url="/pages/order/list?status=4" class="order-item">
        <image src="/assets/order-refund.png" class="order-icon" />
        <text>退款</text>
        <view wx:if="{{orderStats.refund > 0}}" class="badge">{{orderStats.refund}}</view>
      </navigator>
    </view>
  </view>

  <!-- 功能列表 -->
  <view class="section">
    <view class="section-header">我的功能</view>
    <view class="function-list">
      <navigator url="/pages/user/favorites" class="function-item">
        <image src="/assets/icon-fav.png" class="function-icon" />
        <text>我的收藏</text>
        <image src="/assets/arrow-right.png" class="arrow" />
      </navigator>
      <navigator url="/pages/user/address" class="function-item">
        <image src="/assets/icon-address.png" class="function-icon" />
        <text>收货地址</text>
        <image src="/assets/arrow-right.png" class="arrow" />
      </navigator>
      <navigator url="/pages/user/coupon" class="function-item">
        <image src="/assets/icon-coupon.png" class="function-icon" />
        <text>优惠券</text>
        <image src="/assets/arrow-right.png" class="arrow" />
      </navigator>
      <navigator url="/pages/user/feedback" class="function-item">
        <image src="/assets/icon-feedback.png" class="function-icon" />
        <text>意见反馈</text>
        <image src="/assets/arrow-right.png" class="arrow" />
      </navigator>
      <navigator url="/pages/user/setting" class="function-item">
        <image src="/assets/icon-setting.png" class="function-icon" />
        <text>设置</text>
        <image src="/assets/arrow-right.png" class="arrow" />
      </navigator>
    </view>
  </view>
</view>